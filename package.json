{
	"name": "mc-scrpt-live",
	"author": "@cowglow",
	"version": "0.1.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000 --host",
		"dev:docker": "docker compose run --service-ports svelte-kit bash",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --t,config ./tsconfig.json && tsc -p tsconfig.node.json",
		"test": "vitest --watch",
		"format": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --check . && eslint .",
		"clean": "rm -r ./build ./.svelte-kit",
		"sync": "npx tsx --env-file=.env ./scripts/sync-events.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.36.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@types/eslint": "^9.6.0",
		"@types/node": "^24.3.0",
		"dotenv": "^17.2.1",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"node-fetch": "^3.3.2",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.38.2",
		"svelte-check": "^4.3.1",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"vite": "^7.1.5",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.1.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cowglow/mc-scrpt-live.git"
	}
}
